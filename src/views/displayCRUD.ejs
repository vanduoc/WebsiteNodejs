<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Users</title>
    </head>
    <body>
        <style>
            table,
            th,
            td {
                border: 1px solid black;
                border-collapse: collapse;
            }
            a {
                display: inline-block;
                text-decoration: none;
            }
            .btn-edit {
                background-color: orange;
                width: 60px;
                height: 30px;
                border-radius: 3px;
                border: none;
                outline: none;
                cursor: pointer;
            }
            .btn-delete {
                background-color: rgb(238, 0, 0);
                color: #fff;
                width: 60px;
                height: 30px;
                border-radius: 3px;
                border: none;
                outline: none;
                cursor: pointer;
            }
        </style>
        <table style="width: 80%; text-align: center; margin: auto">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Adress</th>
                <th>Action</th>
            </tr>
            <tr>
                <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                      <td><%= data[i].firstName %></td>
                      <td><%= data[i].lastName %></td>
                      <td><%= data[i].email %></td>
                      <td><%= data[i].address %></td>
                      <td>
                        <a href="/edit-crud?id=<%= data[i].id %>" class="btn-edit">Edit</a>
                        <a href="/delete-crud?id=<%= data[i].id %>" class="btn-delete">Delete</a>
                      </td>
                    </tr>
                 <% } %>
            </tr>

        </table>
    </body>
</html>
